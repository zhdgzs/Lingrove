{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.2.0",
  "default_locale": "zh_CN",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "__MSG_extensionName__"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tts",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/content/constants.js",
        "js/content/prompt-rules.js",
        "js/content/themes.js",
        "js/content/utils.js",
        "js/content/storage.js",
        "js/content/translation-types.js",
        "js/content/crypto-utils.js",
        "js/content/translation-adapters.js",
        "js/content/translation-service.js",
        "js/content/dom-handler.js",
        "js/content/ui-components.js",
        "js/content/text-replacer.js",
        "js/content/api-client.js",
        "js/content/event-handlers.js",
        "js/content/main.js"
      ],
      "css": ["css/content.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "process-page": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "__MSG_commandProcessPage__"
    },
    "restore-page": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "__MSG_commandRestorePage__"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "css/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
